<%= form_with(model: table) do |form| %>
  <% if table.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(table.errors.count, "error") %> prohibited this table from being saved:</h2>

      <ul>
        <% table.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :number, style: "display: block" %>
    <%= form.number_field :number %>
  </div>

  <div>
    <%= form.label :seats, style: "display: block" %>
    <%= form.number_field :seats %>
  </div>

  <div>
    <div>*Optional</div>
    <%= form.label :seating_option_id, style: "display: block" %>
    <%= form.collection_select :seating_option_id, current_business.seating_options, :id, :name, { include_blank: "Select a seating option" } %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
