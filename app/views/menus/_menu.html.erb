<div id="<%= dom_id menu %>" class="py-3">
  <div class="py-3 border_bottom_gray">
    <%= link_to "Edit this menu", edit_menu_path(@menu), data: { turbo_frame: "menu_infor" } %>
  
    <%= turbo_frame_tag "menu_infor" do %>
      <div class="pt-3">
        <%= menu.name %>
      </div>
      <div class="pt-3">
        Description: <%= menu.description %>
      </div>
    <% end %>

  </div>

  <div class="my-3">
    <div class="py-3 border_bottom_gray">
      <div>
        <%= link_to "+ Add a new group of dishes for this menu", 
              new_group_path(menu_id: @menu.id), data: { turbo_frame: "group_new" } %>
      </div>
    </div>

    <%= turbo_frame_tag "group_new" %>

    <div class="menu_groups mt-3" id="<%= dom_id(@menu) %>_groups">
      <%= render partial: "groups/group", collection: @menu.groups, as: :group, locals: { menu: @menu } %>
    </div>
  </div>

</div>
