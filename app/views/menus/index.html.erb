<% provide(:sub_title, "Menu") %>
<%= render "shared/admin_content_container" do %>
  <div data-controller="toggle" data-toggle-change-class="active">

    <div class="py-3 border_bottom_gray">
      <h1>Menus</h1>
      <div><%= link_to "+ Add menu", new_menu_path, data: { turbo_frame: "menu_new" }, class: "main-button main-button--red" %> </div>
    </div>

    <%= turbo_frame_tag "menu_new" %>

    <div id="menus" class="border_bottom_gray button_flex_container" data-toggle-target="collection">
      <%= render partial: "menu_button", collection: @menus, as: :menu %>
    </div>

    <%= turbo_frame_tag "menu_content" %>

  </div>
<% end %>
